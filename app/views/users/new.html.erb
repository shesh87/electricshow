<h1>SIGN UP!</h1>

<% if flash[:error] %>
	<%= flash[:error] %>
    <ul>
      <% @event.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
<% end %>





<%= form_for (@user) do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %><br />

	<%= f.label :last_name %>
	<%= f.text_field :last_name %><br />

	<%= f.label :user_name %>
	<%= f.text_field :user_name %><br />

	<%= f.label :password %>
	<%= f.password_field :password %><br />	

	<%= f.label :email %>
	<%= f.text_field :email %><br />

	<%= f.label :birthdate %>
	<%= f.date_field :birthdate %><br />


	<%= f.submit "Create Account" %>
	<%= button_tag "Reset", type: :reset %>
<% end %>