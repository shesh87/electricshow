<h1>NEW EVENT CREATED PAGE</h1>




<nav class="navbar-sub">
	<%= link_to('Edit', edit_event_path(@event)) %>
</nav>


<h3><%= @event.title %></h3>



<p><%= @event.artist %></p>
<p><%= @event.description %></p>
<p><%= @event.date %></p>
<p><%= @event.time.strftime('%I:%M %p') %></p>
<p><%= @event.venue %></p>
<p><%= @event.city %></p>
<p>Purchase Tickets Here: <a href=<%= @event.ticket %> target="_blank"><%=@event.ticket%></a></p>



<button><%= link_to("Write A Post", new_event_post_path)%></button>
<br>

<div>
	<h2>COMMENTS</h2>
	<ul class="comments">
		<% @posts.each do |post| %>
			<li>
				<%= post.comments %>
				<% if post.user_id == current_user.id %>
					<%= link_to('Delete', delete_post_path(post.id), :method => :delete) %>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>





