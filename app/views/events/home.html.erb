<h1>THIS IS HOME/SEARCH PAGE</h1>


<button>
	<%= link_to('Create Event', new_event_path) %>
</button>


<br><br>

<button class="geo">Track My Location!</button>
<br>
<img class="map" src="">
<br><br>




<div class="flash-msg">
	<% if flash[:nothing] %>
		<%= flash[:nothing] %>
	<% end %>
</div>

<br><br>


<div class="col-sm-10">

	<%= form_tag("/search/results", method: "get") do %>
	  <%= label_tag(:title, "Event:") %>
	  <%= search_field_tag(:title) %>

	  <%= label_tag(:artist, "Artist(s):") %>
	  <%= search_field_tag(:artist) %>

	  <%= label_tag(:date, "Date:") %>
	  <%= date_field_tag(:date) %>

	  <%= label_tag(:city, "City:") %>
	  <%= search_field_tag(:city) %>

	  <%= label_tag(:venue, "Venue:") %>
	  <%= search_field_tag(:venue) %>

	  <%= submit_tag("Search") %>
	  <%= link_to("Reset", home_path) %>
	<% end %>

</div>


<div>
	<ul class=".js-events">
		
	</ul>
</div>




















